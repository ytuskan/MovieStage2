<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/comment_author_textview"
        style="@style/secondary_title_text_style"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="TextView"/>

    <TextView
        android:id="@+id/comment_textview"
        style="@style/secondary_text_style"
        android:layout_marginTop="@dimen/small_padding"
        app:layout_constraintStart_toStartOf="@+id/comment_author_textview"
        app:layout_constraintTop_toBottomOf="@+id/comment_author_textview"
        tools:text="TextView"/>
</android.support.constraint.ConstraintLayout>